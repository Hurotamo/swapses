# Environment Variables for ZK Privacy Mixer
# Copy this file to .env and fill in your values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Network RPC URLs
BASE_SEPOLIA_URL=https://sepolia.base.org
BASE_MAINNET_URL=https://mainnet.base.org
LISK_SEPOLIA_URL=https://rpc.sepolia-api.lisk.com
LISK_MAINNET_URL=https://rpc.api.lisk.com

# API Keys for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here
LISKSCAN_API_KEY=your_liskscan_api_key_here

# ZK Circuit Configuration
CIRCUIT_DEPTH=32
MIN_DEPOSIT=10000000000000000
MAX_DEPOSIT=1000000000000000000000
MIN_MIXING_DELAY=3600
MAX_MIXING_DELAY=604800

# Trusted Setup Parameters
PTAU_URL=https://hermez.s3-eu-west-1.amazonaws.com/powersOfTau28_hez_final_16.ptau

# Proof Generation Settings
PROOF_TIMEOUT=300000
MAX_PROOF_SIZE=1000000

# Gas Settings
GAS_LIMIT=5000000
GAS_PRICE=20000000000

# Security Settings
EMERGENCY_PAUSE_ENABLED=true
OWNER_MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# Monitoring Settings
LOG_LEVEL=info
METRICS_ENABLED=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url 